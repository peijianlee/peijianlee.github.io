// 我的信息 - 动画
userinfo-time = 0.2s
.userinfo.Animation
	&.base
		li
			AnimationReset(userinfo-time)
			for num in 1 2 3 4
				&:nth-child({num})
					animation-name animate-left-show
					animation-delay num * (userinfo-time + 0.1s)
			&:nth-child(5)
				animation-name animate-up-left-show
				animation-delay 5 * (userinfo-time + 0.1s)
			&:nth-child(6)
				animation-name animate-up-show
				animation-delay 6 * (userinfo-time + 0.1s)
	&.content
		li
		li span
			AnimationReset(userinfo-time)
			for num in 1 2 3 4 5
				&:nth-child({num})
					animation-name animate-up-left-show
					animation-delay num * (userinfo-time + 0.1s) + 1.8s
					span
						animation-name animate-left-show
						animation-delay num * (userinfo-time + 0.1s) + 1.8s
