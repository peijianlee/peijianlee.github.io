// 技能 - 动画
skills-time = 0.2s
.skills.Animation
	li
		animation-name animate-up-show
		AnimationReset(skills-time)
		p,span
			AnimationReset(skills-time)
	for num in 1 2 3 4
		li:nth-child({num})
			animation-delay num * (skills-time + 0.1s)
			p
				animation-name animate-up-left-show
				animation-delay num * (skills-time + 0.12s)
			span
				animation-name animate-left-show
				animation-delay num * (skills-time + 0.12s)

// 工作
.jobs
	height 84%
	position relative
	padding-left 20px
	dt
		position absolute
		top 8px
		height 0
		border-left 1px dashed #aaa
	dd
		padding-left 20px
		margin-top 15px
		h6
			font-size .8em
			color #745f6e
			position relative
			&:before
				content ""
				width 8px
				height 8px
				background-color #745f6e
				border-radius 4px
				position absolute
				top 7px
				left -23px
		h5
			font-size 1.1em
			font-weight bold
			color base-color-1-dark
			margin-top 5px
			margin-bottom 5px
		p
			font-size .9em
			color #555
			line-height 2.2em
			margin-bottom 25px

// 工作 - 动画
jobs-time = 0.3s
.jobs.Animation
	dt
		animation-name animate-line-show
		AnimationReset(1.8s)
	dd
		animation-name animate-left-show
		AnimationReset(jobs-time)
		h6,h5,p
			animation-name animate-left-show
			AnimationReset(jobs-time + 0.2s)
	for num in 1 2 3
		dd:nth-child({num})
			animation-delay num * (jobs-time + 0.2s)
			h6
				animation-delay num * (jobs-time + 0.1s)
			h5
				animation-delay num * (jobs-time + 0.15s)
			p
				animation-delay num * (jobs-time + 0.2s)

@keyframes animate-line-show
	0%
		height 0
	100%
		opacity 1
		height 100%
@keyframes animate-left-show
	0%
		transform translate(-30px, 0)
	100%
		transform translate(0, 0)
		opacity 1

