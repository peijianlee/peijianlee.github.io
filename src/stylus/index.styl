// 底部提示滚动箭头图标
.bottomArrow
	width 100%
	height 30px
	line-height 30px
	position fixed
	left 0
	bottom 0
	text-align center
	span
		color rgba(0,0,0,.2)
		font-size 26px
		position absolute
		display inline-block
		width 60px
		line-height 100%
		left 50%
		margin-left -30px
		opacity 0.3
		animation animate-array-down 1.5s ease-in
		animation-iteration-count infinite
		&:nth-child(1)
			top 0
			animation-delay .1s
		&:nth-child(2)
			top 10px

@keyframes animate-array-down
	0%
		transform translate(0, -20px)
	50%
		transform translate(0, -10px)
		opacity 1
	100%
		transform translate(0, -20px)

// Loading 动画
loading-circle-size = 8px
loading-time = 1.5s
.Loading
	width 100%
	position absolute
	top 50%
	margin-top -150px
	text-align center
	span
		display inline-block
		width loading-circle-size * 2
		height loading-circle-size * 2
		border-radius loading-circle-size
		transform scale(0, 0)
		background-color base-color-1
		animation-duration loading-time
		animation-timing-function linear
		animation-iteration-count infinite
		&:nth-child(1)
			animation-name animate-loading-show-1
		&:nth-child(2)
			animation-name animate-loading-show-2
			margin-left -5px
			margin-right -5px
		&:nth-child(3)
			animation-name animate-loading-show-3
	p
		font-size 11px
		color base-color-1
		line-height 40px	

@keyframes animate-loading-show-1
	25%
		transform scale(1, 1)
	50%
		transform scale(0, 0)
	100%
		transform scale(0, 0)

@keyframes animate-loading-show-2
	25%
		transform scale(0, 0)
	50%
		transform scale(1, 1)
	75%
		transform scale(0, 0)

@keyframes animate-loading-show-3
	50%
		transform scale(0, 0)
	75%
		transform scale(1, 1)
	100%
		transform scale(0, 0)


