.project-item.project-item-show-animate
	.title
		font-size 22px
		transform translate(0, 30px)
	ul
		padding-top 30px
		li
			AnimationReset(project-item-time)
		for num in 1 2 3 4
			li:nth-child({num})
				animation-delay num * (project-item-time + 0.2s)


